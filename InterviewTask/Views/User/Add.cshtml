@{
    ViewData["Title"] = "Add User";
}

<a href="~/user/index">Back</a>
<h2>Create Person</h2>

<div class="container">
    <form action="~/user/add" method="post">
        <label for="UserId" class="form-label">User Id:</label><br>
        <input type="number" id="uid" name="UserId" class="form-input"><br>

        <label for="UserName" class="form-label">User Name:</label><br>
        <input type="text" id="uname" name="UserName" class="form-input"><br>

        <label for="Role" class="form-label">Role</label><br>
        <input type="text" id="role" name="Role" class="form-input"><br>

        <label for="LastLogin" class="form-label">Last Login:</label><br>
        <input type="datetime-local" id="llogin" name="LastLogin" class="form-input"><br>

        <label for="FirstName" class="form-label">First name:</label><br>
        <input type="text" id="fname" name="FirstName" class="form-input"><br>

        <label for="LastName" class="form-label">Last name:</label><br>
        <input type="text" id="lname" name="LastName" class="form-input"><br>

        <label for="Department" class="form-label">Department:</label><br>
        <input type="text" id="department" name="Department" class="form-input"><br>

        <label for="DOJ" class="form-label">DOJ:</label><br>
        <input type="datetime-local" id="doj" name="DOJ" class="form-input"><br>

        <label for="MgrId" class="form-label">MgrId:</label><br>
        <input type="number" id="mid" name="MgrId" class="form-input"><br>

        <label for="Seniority" class="form-label">Seniority:</label><br>
        <input type="number" id="seniority" name="Seniority" class="form-input"><br>

        <label for="EmpCode" class="form-label">Emp Code:</label><br>
        <input type="text" id="empcode" name="EmpCode" class="form-input"><br>


        <button style="border: solid cyan">Add User</button>

    </form>
</div>


